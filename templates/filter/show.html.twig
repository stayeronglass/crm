{% extends 'base.html.twig' %}

{% block title %}Filter{% endblock %}

{% block body %}
    <h1>Filter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ filter.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ filter.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ filter.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ filter.price }}</td>
            </tr>
            <tr>
                <th>DateBegin</th>
                <td>{{ filter.dateBegin ? filter.dateBegin|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ filter.dateEnd ? filter.dateEnd|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ filter.lft }}</td>
            </tr>
            <tr>
                <th>Lvl</th>
                <td>{{ filter.lvl }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
                <td>{{ filter.rgt }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ filter.createdAt ? filter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ filter.updatedAt ? filter.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ filter.deletedAt ? filter.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_filter_index') }}">back to list</a>

    <a href="{{ path('app_filter_edit', {'id': filter.id}) }}">edit</a>

    {{ include('filter/_delete_form.html.twig') }}
{% endblock %}

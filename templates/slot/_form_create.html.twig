                </th>
                <th scope="col">&nbsp;</th>
                <th scope="col">Начало</th>
                <th scope="col">Конец</th>
            </tr>
            </thead>
            <tr>
                <td>{{ form_label(form.dayOfWeek.Monday) }}</td>
                <td>{{ form_widget(form.dayOfWeek.Monday) }}</td>
                <td>{{ form_row(form.dayOfWeek.MondayTimeBegin) }}</td>
                <td>{{ form_row(form.dayOfWeek.MondayTimeEnd) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.dayOfWeek.Tuesday) }}</td>

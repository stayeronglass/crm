
<div class="modal-header position-relative pb-0">
    <button type="button" class="btn-close position-absolute top-0 end-0 m-2" data-bs-dismiss="modal" aria-label="Close" onclick="dialog.close()"></button>
</div>

<h1 id="form_h1">Новый Слот</h1>
    {{ form_start(form) }}
    <div class="table-responsive">
        <table class="table" style="width: 50%">
            <thead>
            <tr>
                <th scope="col">
                    <input type="checkbox" id="form_select_all_checkbox" name="form_select_all_checkbox" class="form-check-input" onclick="checkAllExceptSelf(this)">&nbsp;
